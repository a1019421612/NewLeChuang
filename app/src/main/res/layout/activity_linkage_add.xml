<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    tools:context=".activity.LinkageAddActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/beijing" />
            <RelativeLayout
                        android:id="@+id/rl_head"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        >
                        <ImageView
                            android:id="@+id/iv_base_back"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/back"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            />
            </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/rl_head"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="match_parent"
            android:background="@color/comment_bg"></RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_head1"
            android:layout_below="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/liandong"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_linkage_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_circle"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_linkage_ic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/huijia"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="回家"
                    />
                <ImageView
                    android:id="@+id/iv_linkage_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:src="@drawable/edit"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:src="@drawable/ds"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rl_head1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/lv_add_condition"
                    android:layout_width="match_parent"
                    android:descendantFocusability="beforeDescendants"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                </ListView>
                <TextView
                    android:id="@+id/tv_linkage_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加条件"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_bg"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>