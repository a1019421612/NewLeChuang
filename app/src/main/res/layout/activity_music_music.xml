<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请在登陆基础上，添加一台设备，然后获取设备的deviceId，再进行歌单列表或者设备控制操作"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/notice"
        android:layout_marginTop="10dp"
        android:text="设备列表"
        android:onClick="loadDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/music_list"/>
    <Button
        android:id="@+id/music_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/device"
        app:layout_constraintBaseline_toBaselineOf="@+id/device"
        app:layout_constraintStart_toEndOf="@+id/device"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="歌单列表"
        android:onClick="localList" />

    <Button
        android:id="@+id/song_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/device"
        android:layout_marginTop="10dp"
        android:text="歌曲列表"
        android:onClick="loadSongs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/album_list"/>
    <Button
        android:id="@+id/album_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/song_list"
        app:layout_constraintBaseline_toBaselineOf="@+id/song_list"
        app:layout_constraintStart_toEndOf="@+id/song_list"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="专辑列表"
        android:onClick="loadAlbum" />

    <Button
        android:id="@+id/artist_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/song_list"
        android:layout_marginTop="10dp"
        android:text="歌手列表"
        android:onClick="loadAuthor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/music_list"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/artist_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
