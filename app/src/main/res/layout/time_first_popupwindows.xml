<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
<LinearLayout
    android:id="@+id/ll_cancel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666666"
    android:alpha="0.5"
    android:orientation="vertical"
       />
    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/ll_time_everyday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time_everyday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="每天"
                android:textColor="@color/gray_9999"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/iv_time_everyday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/duihao"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_time_workday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time_workday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="工作日"
                android:textColor="@color/gray_9999"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/iv_time_workday"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/duihao"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_time_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time_custom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_9999"
                android:text="自定义"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time_oneday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time_oneday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="仅一次"
                android:textColor="@color/gray_9999"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/iv_time_oneday"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/duihao"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>