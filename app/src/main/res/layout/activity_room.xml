<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    tools:context=".activity.RoomActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/beijing" />
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <ImageView
                android:id="@+id/iv_base_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/back"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_head1"
            android:layout_below="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/liandong">
            <RelativeLayout
                android:id="@+id/ll_linkage_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/iv_linkage_ic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/huijia"
                    />

            </RelativeLayout>
            <TextView
                android:id="@+id/tv_room_name"
                android:layout_below="@id/ll_linkage_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="回家"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:id="@+id/iv_linkage_edit"
                android:layout_toRightOf="@id/tv_room_name"
                android:layout_below="@id/ll_linkage_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:src="@drawable/edit"
                android:layout_marginBottom="@dimen/dp_20"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_room_device"
            android:layout_below="@+id/rl_head1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


</LinearLayout>