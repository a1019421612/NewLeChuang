<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/qian_blue">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/jidinghe_bai" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/shape_empty_ccc_circle_nocorner"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">


                    <ImageView
                        android:id="@+id/iv_program_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:src="@mipmap/pindao_xiangshang" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="频道" />

                    <ImageView
                        android:id="@+id/iv_program_reduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:src="@mipmap/pindao_xiangxia" />
                </LinearLayout>

                <include layout="@layout/view_comprehensive_ok" />

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="160dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_empty_ccc_circle_nocorner"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/iv_voice_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:src="@mipmap/yinliang_jia" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="声音" />

                    <ImageView
                        android:id="@+id/iv_voice_reduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"
                        android:src="@mipmap/yinliang_jian" />
                </LinearLayout>
            </RelativeLayout>

            <com.hbdiye.newlechuangsmart.view.MyGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:horizontalSpacing="1dp"
                android:numColumns="3"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:verticalSpacing="1dp"
                tools:visibility="gone" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/iv_kaiguan_jidinghe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机顶盒开关"
                    android:textSize="15sp"
                    android:textColor="@color/qian_gray"
                    android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/kaiguan" />

                <TextView
                    android:id="@+id/iv_kaiguan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电视机开关"
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:textColor="@color/qian_gray"
                    android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/dianshikaiguan"  />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>