<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/device"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:onClick="login"/>
    <Button
        android:id="@+id/device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login"
        app:layout_constraintBottom_toBottomOf="@+id/login"
        android:onClick="device"
        android:text="设备"/>
    <Button
        android:id="@+id/update_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人信息"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/device"
        app:layout_constraintTop_toBottomOf="@+id/login"
        android:layout_marginTop="20dp"
        android:onClick="user"
        />
    <Button
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/update_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/update_img"
        app:layout_constraintBottom_toBottomOf="@+id/update_img"
        android:onClick="music"
        android:text="音乐"/>
    <Button
        android:id="@+id/control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/update_img"
        app:layout_constraintEnd_toEndOf="@+id/update_img"
        app:layout_constraintTop_toBottomOf="@+id/update_img"
        android:onClick="control"
        android:text="设备控制"/>
    <Button
        android:id="@+id/playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/control"
        app:layout_constraintStart_toEndOf="@+id/control"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="playlist"
        android:text="歌单操作"/>
    <Button
        android:id="@+id/scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/control"
        app:layout_constraintEnd_toEndOf="@+id/control"
        app:layout_constraintTop_toBottomOf="@+id/control"
        android:onClick="scene"
        android:text="情景"/>

    <Button
        android:id="@+id/channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/scene"
        app:layout_constraintStart_toEndOf="@+id/scene"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="channel"
        android:text="分区操作"/>
</android.support.constraint.ConstraintLayout>
