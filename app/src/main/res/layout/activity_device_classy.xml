<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DeviceClassyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/beijing" />
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <TextView
                android:id="@+id/tv_classy_title"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:text="设备"
                android:gravity="center"
                android:textSize="@dimen/size_20"
                android:textColor="@color/white"
                />
            <ImageView
                android:id="@+id/iv_base_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/back"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout_device"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:tabIndicatorColor="#3da0f8"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>