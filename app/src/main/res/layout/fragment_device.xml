<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/beijing" />

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_device_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="丨"/>
            <TextView
                android:layout_toRightOf="@+id/tv_device_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="常用分类"
                android:textSize="@dimen/size_16"
                />
        </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/comment_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.hbdiye.newlechuangsmart.view.MyGridView
                        android:id="@+id/gv_common_classify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:horizontalSpacing="1dp"
                        android:verticalSpacing="1dp"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="3"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth">
                    </com.hbdiye.newlechuangsmart.view.MyGridView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?android:actionBarSize"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#60AED2"
                            android:layout_centerVertical="true"
                            android:text="丨"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="房间分类"
                            android:textSize="@dimen/size_16"
                            />
                        <TextView
                            android:id="@+id/tv_device_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="编辑"
                            android:paddingLeft="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/size_16"
                            />
                    </LinearLayout>
                    <com.hbdiye.newlechuangsmart.view.MyGridView
                        android:id="@+id/gv_device_classify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:horizontalSpacing="1dp"
                        android:verticalSpacing="1dp"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="3"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth">
                    </com.hbdiye.newlechuangsmart.view.MyGridView>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
