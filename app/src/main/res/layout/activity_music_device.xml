<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请在登陆基础上进行相关操作"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/bind_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/notice"
        android:layout_marginTop="10dp"
        android:text="绑定"
        android:onClick="bind"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/device_list"/>
    <Button
        android:id="@+id/device_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/bind_device"
        app:layout_constraintBaseline_toBaselineOf="@+id/bind_device"
        app:layout_constraintStart_toEndOf="@+id/bind_device"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="设备列表"
        android:onClick="getDevice" />

    <Button
        android:id="@+id/unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bind_device"
        android:layout_marginTop="10dp"
        android:text="解绑"
        android:onClick="unbind"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/catalog_list"/>
    <Button
        android:id="@+id/catalog_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/unbind"
        app:layout_constraintBaseline_toBaselineOf="@+id/unbind"
        app:layout_constraintStart_toEndOf="@+id/unbind"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="设备分类"
        android:onClick="catalogList" />

    <Button
        android:id="@+id/catalog_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/catalog_list"
        android:layout_marginTop="10dp"
        android:text="设备详情"
        android:onClick="catalogLoad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/device_nicker"/>
    <Button
        android:id="@+id/device_nicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="设备改名"
        android:onClick="deviceNicker"
        app:layout_constraintStart_toEndOf="@+id/catalog_load"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/catalog_load"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/catalog_load"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
