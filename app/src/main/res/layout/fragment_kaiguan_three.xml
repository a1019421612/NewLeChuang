<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/fragment_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_sanluchumokaiguan"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:id="@+id/tv_kg_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:padding="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_kg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_kg_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kaiguan"
                android:padding="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_kg_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar_text_sel"
                android:text="---"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_kg_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_kg_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kaiguan"
                android:padding="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_kg_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar_text_sel"
                android:text="---"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_kg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_kg_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kaiguan"
                android:padding="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_kg_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar_text_sel"
                android:text="---"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
